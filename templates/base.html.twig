<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}E-primeur{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
            <link rel="stylesheet" href={{asset('assets/css/style.css')}}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="container mx-auto">
            <nav class="navbar" role="navigation" aria-label="main navigation">
                <div class="navbar-brand">
                    <a class="navbar-item" href="https://bulma.io">
                         <p>E-primeur</p>
                    </a>

                    <a class="navbar-item" href="{{path('product')}}">Produits</a>

                 <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                     <span aria-hidden="true"></span>
                     <span aria-hidden="true"></span>
                     <span aria-hidden="true"></span>
                 </a>
            </div>

        <div id="navbarBasicExample" class="navbar-menu">

            <div class="navbar-end">
            <div class="navbar-item">
             {% if app.user%}
             <div class="buttons">
                <a class="button is-primary" href="{{path('account')}}">
                    <strong>Mon compte</strong>
                </a>
                <a class="button is-link" href="{{path('app_logout')}}">
                    Se deconnecter
                </a>
                </div>
             {% else %}
                <div class="buttons">
                <a class="button is-primary" href="{{path('register')}}">
                    <strong>S'inscrire</strong>
                </a>
                <a class="button is-link" href="{{path('app_login')}}">
                    Se connecter
                </a>
                </div>
            {% endif %}
            </div>
            </div>
        </div>
    </nav>
        
        {% block content %}
        
        {% endblock %}  
        
            </div>
        {% endblock %}
    </body>
</html>
