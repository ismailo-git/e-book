{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block content %}
    <div class="columns mt-5 is-flex-wrap-wrap">
        {% for product in products %}
            <div class="column is-3">
            <div class="card">
           
            <div class="card-image">
             <a href="{{path('product', { 'slug': product.slug})}}"
               <figure class="image is-128x128">
                <img src="/uploads/{{product.image}}" class="image" alt="">
              </figure></a>
            </div>
            
            <div class="card-content">
                <h3 class="is-size-4">{{product.name}}</h3>
                <p class="mb-3">{{product.description}}</p>
                <span class="has-text-weight-bold">{{product.price/100}} â‚¬</span><br>
                <button class="button is-primary mt-3">Ajouter au panier</button>
            </div>
            </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
